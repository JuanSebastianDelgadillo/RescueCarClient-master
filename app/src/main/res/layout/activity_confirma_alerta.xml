<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/blanco"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/azul"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    map:srcCompat="@mipmap/icon_rescue_car" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Rescue Car"
                    android:textColor="@color/blanco"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imInt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|end"
                    map:srcCompat="@drawable/int_no" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:background="@color/azul"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SU DIRECCIÓN"
            android:textColor="@color/blanco" />

        <EditText
            android:id="@+id/etDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/linea"
            android:inputType="text"
            android:textColor="@color/blanco"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LA UBICACIÓN ES APROXIMADA"
            android:textColor="@color/blanco"
            android:textSize="8sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBuscando"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gris"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llgm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bordelinear"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                map:srcCompat="@mipmap/ic_gmoto" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Solicitud de grúa para motocicleta."
                android:textColor="@color/azul" />

            <ProgressBar
                android:id="@+id/pbGm"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/azul" />

            <CheckBox
                android:id="@+id/cbGm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/azul"
                map:buttonTint="@color/azul"
                map:buttonTintMode="@color/azul"
                android:enabled="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llga"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bordelinear"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                map:srcCompat="@mipmap/ic_gauto" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Solicitud de grúa para vehículo"
                android:textColor="@color/azul" />

            <ProgressBar
                android:id="@+id/pbGa"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp" />

            <CheckBox
                android:id="@+id/cbGa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/azul"
                map:buttonTint="@color/azul"
                map:buttonTintMode="@color/azul"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llgc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bordelinear"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                map:srcCompat="@mipmap/ic_gcamioneta" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Solicitud de grúa para camioneta."
                android:textColor="@color/azul" />

            <ProgressBar
                android:id="@+id/pbGc"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp" />

            <CheckBox
                android:id="@+id/cbGc"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/azul"
                map:buttonTint="@color/azul"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llgo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bordelinear"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                map:srcCompat="@mipmap/ic_camion" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Solicitud de grúa para vehículo mayor."
                android:textColor="@color/azul" />

            <ProgressBar
                android:id="@+id/pbGo"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp" />

            <CheckBox
                android:id="@+id/cbGo"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/azul"
                map:buttonTint="@color/azul"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llpo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bordelinear"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                map:srcCompat="@mipmap/ic_pol" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Solicitud de vehiculo policial."
                android:textColor="@color/azul" />

            <ProgressBar
                android:id="@+id/pbPo"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp" />

            <CheckBox
                android:id="@+id/cbPo"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/azul"
                map:buttonTint="@color/azul"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llam"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bordelinear"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                map:srcCompat="@mipmap/ic_amb" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Solicitud de vehículo de emergencia."
                android:textColor="@color/azul" />

            <ProgressBar
                android:id="@+id/pbAm"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0" />

            <CheckBox
                android:id="@+id/cbAm"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0"
                android:textColor="@color/azul"
                map:buttonTint="@color/azul"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llbo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bordelinear"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                map:srcCompat="@mipmap/ic_bom" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Solicitud de vehículo de emergencia."
                android:textColor="@color/azul" />

            <ProgressBar
                android:id="@+id/pbBo"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp" />

            <CheckBox
                android:id="@+id/cbBo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                map:buttonTint="@color/azul"
                android:enabled="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llme"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bordelinear"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                map:srcCompat="@mipmap/ic_mec" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Solicitud de servicios de mecánicos en ruta."
                android:textColor="@color/azul" />

            <ProgressBar
                android:id="@+id/pbMe"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp" />

            <CheckBox
                android:id="@+id/cbMe"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/azul"
                map:buttonTint="@color/azul"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llne"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bordelinear"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                map:srcCompat="@mipmap/ic_neu" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Solicitud de servicios de neumaticos."
                android:textColor="@color/azul" />

            <ProgressBar
                android:id="@+id/pbNe"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp" />

            <CheckBox
                android:id="@+id/cbNe"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/azul"
                map:buttonTint="@color/azul"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lltr"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bordelinear"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                map:srcCompat="@mipmap/ic_tra" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Solicitud de servicio de transporte."
                android:textColor="@color/azul" />

            <ProgressBar
                android:id="@+id/pbTr"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp" />

            <CheckBox
                android:id="@+id/cbTr"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/azul"
                map:buttonTint="@color/azul"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llco"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bordelinear"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                map:srcCompat="@mipmap/ic_com" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Solicitud de servicio de combustible."
                android:textColor="@color/azul" />

            <ProgressBar
                android:id="@+id/pbCo"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp" />

            <CheckBox
                android:id="@+id/cbCo"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/azul"
                map:buttonTint="@color/azul"
                android:enabled="false"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btFinalizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/azul"
            android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
            android:paddingLeft="20dp"
            android:text="FINZALIZAR"
            android:textColor="@color/blanco" />

    </LinearLayout>


</LinearLayout>

